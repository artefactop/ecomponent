<functional>

    <config>
        <syslog name="ecomponent"/>
        <jid>ecomponent.test</jid>
        <throttle active="false" max-per-period="10" period-seconds="5">
            <whitelist>
                <item jid="localhost"/>
                <item jid="alice.localhost"/>
            </whitelist>
        </throttle>
        <processors>
            <iq xmlns="default" type="mod" data="dummy"/>
            <message type="mod" data="dummy"/>
            <presence type="mod" data="dummy"/>
        </processors>
        <disco-info active="true">
            <feature var="jabber:iq:last"/>
        </disco-info>
    </config>

    <steps>
        <step name="send disco#info" type="send">
            <iq xmlns='jabber:client'
                type='get'
                to='alice.localhost'
                from='bob@localhost/pc'
                id='test_bot'>
                <query xmlns='http://jabber.org/protocol/disco#info'/>
            </iq>
        </step>

        <step name="receive creation messages" type="receive">
            <iq xmlns='jabber:client'
                type='result'
                id='test_bot'
                from='alice.localhost'
                to='bob@localhost/pc'>
                <query xmlns='http://jabber.org/protocol/disco#info'>
                    <feature var='jabber:iq:last'/>
                </query>
            </iq>
        </step>
    </steps>

</functional>